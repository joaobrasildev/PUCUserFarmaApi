{
  "name": "pucuserapi",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest  --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f ./src/ormconfig.ts",
    "m:run": "npm run typeorm:cli migration:run",
    "m:generate": "npm run typeorm:cli migration:generate -- -n"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaobrasildev/PUCUserFarmaApi.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joaobrasildev/PUCUserFarmaApi/issues"
  },
  "homepage": "https://github.com/joaobrasildev/PUCUserFarmaApi#readme",
  "dependencies": {
    "@nestjs/cli": "^8.2.2",
    "@nestjs/common": "^8.4.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/testing": "^8.4.2",
    "@nestjs/typeorm": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "fake": "^0.2.2",
    "jest": "^27.5.1",
    "pg": "^8.7.3",
    "swagger-ui-express": "^4.3.0",
    "tsc-init": "^2.1.0",
    "typeorm": "^0.2.45",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^6.6.9",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.12",
    "faker": "^5.5.3",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@shared/(.*)": [
        "<rootDir>/shared/$1"
      ],
      "@config/(.*)": [
        "<rootDir>/config/$1"
      ]
    }
  }
}
